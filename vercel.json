{
  "buildCommand": "npm run build",
  "outputDirectory": "public",
  "rewrites": [
    { "source": "/status", "destination": "/status.html" },
    { "source": "/admin", "destination": "/admin/index.html" },
    { "source": "/admin/(.*)", "destination": "/admin/$1" }
  ],
  "crons": [
    {
      "path": "/api/generate-playlist",
      "schedule": "0 0 1 * *"
    }
  ]
}
