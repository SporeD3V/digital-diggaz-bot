{
  "buildCommand": "npm run build",
  "rewrites": [
    { "source": "/", "destination": "/pages/index.html" },
    { "source": "/admin", "destination": "/public/admin/index.html" },
    { "source": "/admin/(.*)", "destination": "/public/admin/$1" }
  ],
  "crons": [
    {
      "path": "/api/generate-playlist",
      "schedule": "0 0 1 * *"
    }
  ]
}
